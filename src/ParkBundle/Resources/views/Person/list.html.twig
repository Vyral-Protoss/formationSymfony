{% extends '::base.html.twig' %}

{% block title %}{{ parent() }}  Park person list{% endblock %}

{% block body %}
    <h2>Person list</h2>

    <table class="table table-striped table-bordered">
        <tr>
            <th>ID</th>
            <th>Firstname</th>
            <th>Lastame</th>
        </tr>
        {% for person in persons %}
            <tr>
                <td>{{ person.id }}</td>
                <td>{{ person.firstname|computer_name }}</td>
                <td>{{ person.lastname|computer_name }}</td>
            </tr>
        {% else %}
            <tr><td colspan="4">No data</td></tr>
        {% endfor %}
    </table>
{% endblock %}